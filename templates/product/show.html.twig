{% extends "base.html.twig" %}

{% block title product.name %}

{% block stylesheets %}
    <link rel="shortcut icon" href="/source/icon.ico" type="image/x-icon">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/show.css">
    <link rel="stylesheet" href="/css/footer.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap v4.5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
<!-- BLOCK HEADER -->
<header>
    <nav class="navbar navbar-expand-lg navbar-dark nav">
        <div class="logo_events">
            <img src="/source/logo_wht.png" alt="logo">
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarT"
            aria-controls="navbarT" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="color: #fff !important;"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarT">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="{{ path('home')}}">Accueil</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Programmation</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('map') }}">Carte Interactive</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Partenaires</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('product.index')}}">Boutique</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contactez-nous</a></li>
            </ul>
        </div>
    </nav>
</header>

<!-- BLOCK BODY -->
<div class="jumbotron pdt">
    <div class="container mt-5">
        <div class="row flex">
            <div class="col">
                <img src="{{ product.image }}" alt="{{ product.name }}" class="product-img">
            </div>
            <div class="col-md-4 text-center infos">
                <h1>{{ product.name }}</h1>
                <div class="price_product">{{ product.price }}€</div>
                <div class="text-muted">Référence : {{ product.ref }}</div>
                {% if product.size is not null and product.size < 6 %}
                    <div class="product_size mt-5">Taille:
                        <select name="sizeType" id="sizeType">
                            <option {{ product.sizeType == 'XS' ? 'selected' : "" }}>XS</option>
                            <option {{ product.sizeType == 'S' ? 'selected' : "" }}>S</option>
                            <option {{ product.sizeType == 'M' ? 'selected' : "" }}>M</option>
                            <option {{ product.sizeType == 'L' ? 'selected' : "" }}>L</option>
                            <option {{ product.sizeType == 'XL' ? 'selected' : "" }}>XL</option>
                            <option {{ product.sizeType == 'XXL' ? 'selected' : "" }}>XXL</option>
                        </select>
                    </div>
                {% endif %}
                <a href="#" class="btn btn-primary mt-5 mb-5">Ajouter au panier</a> <!-- Faire le système de panier -->

                <p class="p-4">
                    {{ product.description | nl2br }}
                </p>

            </div>
        </div>
    </div>
</div>

<!-- FOOTER -->
<section class="footer_container__little">
    <div class="footer_block">

        <!-- MENU -->
        <div class="nav">
            <h3>Accès rapide</h3>
            <ul>
                <li><a href="{{ path('home') }}">Accueil</a></li>
                <li><a href="#">Programmation</a></li>
                <li><a href="{{ path('map') }}">Carte Interactive</a></li>
                <li><a href="#">Partenaires</a></li>
                <li><a href="{{ path('product.index')}}">Boutique</a></li>
                <li><a href="#">Contactez-nous</a></li>
                <li><a href="#">FAQ</a></li>
            </ul>
        </div>

        <!-- ADRESS -->
        <div class="address">
            <h3>Lieu</h3>
            <p>Plaine de Courno</p>
            <p>75 500 Paris</p>
        </div>

        <!-- SOCIAL -->
        <div class="social_link">
            <h3>Suivez-nous</h3>
            <ul>
                <li>
                    <a href="https://twitter.com/" target="_blank">
                        <i class="fa fa-twitter"></i>
                    </a>
                </li>
                <li>
                    <a href="https://facebook.com/" target="_blank">
                        <i class="fa fa-facebook"></i>
                    </a>
                </li>
                <li>
                    <a href="https://instagram.com/" target="_blank">
                        <i class="fa fa-instagram"></i>
                    </a>
                </li>
                <li>
                    <a href="https://instagram.com/" target="_blank">
                        <i class="fa fa-youtube"></i>
                    </a>
                </li>
                <li>
                    <a href="https://instagram.com/" target="_blank">
                        <i class="fa fa-snapchat"></i>
                    </a>
                </li>
                <li>
                    <a href="https://instagram.com/" target="_blank">
                        <i class="fa fa-linkedin"></i>
                    </a>
                </li>
            </ul>

        </div>

        <a href="#" class="arrow">
            <i class="fa fa-arrow-up"></i>
        </a>
    </div>
</section>

{% endblock body %}


