{% extends "base.html.twig" %}

{% block title 'Valider mon panier' %}

{% block stylesheets %}
    <link rel="shortcut icon" href="/source/icon.ico" type="image/x-icon">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/valid.css">
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Bootstrap v4.5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-4 left-block">
            <div class="jumbotron">
                <div class="container">
                    <div class="row">
                        <h1><i class="fa fa-lock"></i> PAIEMENT SÉCURISÉ</h1>

                        {% for item in items %}
                            <div class="text-center price">
                                {{ total }}€
                            </div>
                        {% endfor %}

                        <div class="container choice_type">
                            <button class="card-credit">
                                <i class="fa fa-cc-visa"></i> <i class="fa fa-cc-mastercard"></i> <i class="fa fa-cc-amex"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <form action="#" class="form-group security">
                <div class="container">
                    <div class="row">
                        <div class="col">
                            <label for="cart"><i class="fa fa-credit-card"></i> Numéro de carte</label>
                            <input type="number" name="cart" id="cart" maxlength="16" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="user"><i class="fa fa-user"></i> Prénom et nom indiqués sur la carte</label>
                            <input type="text" name="user" id="user" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="date"><i class="fa fa-calendar"></i> MM/AA</label>
                            <input type="text" name="date" id="date">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label for="lock"><i class="fa fa-lock"></i> Code de sécurité <i class="fa fa-question-circle-o"></i></label>
                            <input type="number" name="lock" id="lock">
                        </div>
                    </div>
                </div>
            </form>

            <p>
                <input type="checkbox" name="accept" id="accept" class="mt-5">
                J'accepte les <a href="#">Conditions Générales</a> de Vente de Live Events.
            </p>
            <a href="{{ path('cart.index') }}" class="btn btn-success text-center">PAYER {{ total }}€</a>
        </div>
    </div>
</div>
{% endblock %}